#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n;
    cin>>n;

    int counter = 1;
    int prev;
    cin>>prev;

    for(int i = 1; i < n; i++)
    {
            int curr;
            cin>>curr;

            if(curr != prev)
            {
                counter++;
            }

            prev = curr;
    }

    cout<<counter;

}
